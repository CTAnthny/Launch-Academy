
<%= form_for @wing_order do |f|%>

  <div class="row">
    <%= f.label :customer_name %>
    <%= f.text_field :customer_name %>
  </div>

  <div class="row">
    <%= f.label :city %>
    <%= f.text_field :city %>
  </div>

  <div class="row">
    <%= f.label :state %>
    <%= f.select :state, options_for_select(@state_collection) %>
  </div>

  <div class="row">
    <%= f.label :quantity %>
    <% @quantity_collection.each do |quantity| %>
      <%= f.radio_button(:quantity, quantity.first) %>
      <%= f.label quantity.first, quantity.last %>
    <% end %>
  </div>

  <div class="row">
    <%= f.label :ranch_dressing, "Add Ranch Dressing" %>
    <%= f.check_box :ranch_dressing %>
  </div>

  <div class="row">
    <%= f.label :flavors %>
    <%= f.collection_check_boxes :flavor_ids, @flavor_collection, :id, :name %>
  </div>

  <div class="row">
    <%= f.submit "Place Order" %>
  </div>

<% end %>
